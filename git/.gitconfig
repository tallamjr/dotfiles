	email = t.allam.jr@gmail.com
[push]
	default = simple
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[alias]
	ss = status
	co = checkout
	logg = log --graph --decorate --oneline --abbrev --all
    vimdiff = difftool
    ap = add --patch
    dc = diff --cached
    sa = stash apply
    ba = branch --all
