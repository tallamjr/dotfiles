	name = Tarek Allam
	email = t.allam.jr@gmail.com
[push]
	default = simple
[diff]
    tool = vimdiff
	submodule = log
[difftool]
    prompt = false
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[alias]
    pull = pull --no-ff
    merge = merge --no-ff
	ss = status
	co = checkout
	logg = log --graph --decorate --oneline --abbrev --all
    vimdiff = difftool
    ap = add --patch
    cp = cherry-pick
    dc = diff --cached
    sa = stash apply
    sp = stash pop
    sl = stash list
    sd = stash drop
    ba = branch --all --verbose
    pulla = pull --all --no-ff
    pusm = pull upstream master
    pushnov = push --no-verify
	spush = push --recurse-submodules=on-demand
    spull = !git pull --all && git submodule sync --recursive && git submodule update --init --recursive && git submodule update --remote
	plfs = \\!git -c filter.lfs.smudge= -c filter.lfs.required=false pull && git lfs pull
[status]
	submoduleSummary = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
